<main id="main" class="main">

    <div class="pagetitle">
        <h1>Category Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Categories</li>
                <li class="breadcrumb-item active">Delete category</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <form class="row g-3">
                            <h5 class="card-title">Are you sure you want to delete category "@Html.DisplayFor(model => model.Name)" ?</h5>

                            <!-- Floating Labels Form -->
                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Category name</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Name)" disabled>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Category description</label>
                                <div class="col-sm-6">
                                    <textarea class="form-control" placeholder=" @Html.DisplayFor(model => model.Description)" disabled id="floatingTextarea" style="height: 100px;"></textarea>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="row mb-3">
                                    <label for="inputDate" class="col-sm-4  col-form-label">Created date</label>
                                    <div class="col-sm-6 m-1">
                                        @Html.DisplayFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputDate" class="col-sm-4  col-form-label">Modified date</label>
                                    <div class="col-sm-6 m-1">
                                        @Html.DisplayFor(model => model.ModifiedAt, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input type="text" value="@(ViewBag.InputTitle)" class="form-control" id="floatingName" placeholder="Category name">
                                        <label style="color:red ;" for="floatingName">*Enter Category name to confirm</label>
                                    </div>
                                </div>
                                </div>
                        </form>
                        <!-- End floating Labels Form -->
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()


                            <div class="form-actions no-color text-center">
                                @*<input type="submit" value="Delete" class="btn btn-default" /> |*@
                                <button type="submit" value="Delete" class="btn btn-primary">Delete</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>


</main><!-- End #main -->