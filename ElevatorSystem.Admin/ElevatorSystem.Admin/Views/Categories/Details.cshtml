<main id="main" class="main">

    <div class="pagetitle">
        <h1>Categories Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Categories</li>
                <li class="breadcrumb-item active">Detail</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <form class="row g-3">
                            <h5 class="card-title"> Tag " @Html.DisplayFor(model => model.Name)"</h5>

                            <!-- Floating Labels Form -->
                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Category name</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Name)" disabled>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Category description</label>
                                <div class="col-sm-6">
                                    <textarea class="form-control" placeholder=" @Html.DisplayFor(model => model.Description)" disabled id="floatingTextarea" style="height: 100px;"></textarea>

                                </div>
                            </div>


                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Publish status</label>

                                <div class="row mb-3">
                                    <label for="inputDate" class="col-sm-4  col-form-label">Created date</label>
                                    <div class="col-sm-6 m-1">
                                        @*<input type="date" value=" @Html.DisplayFor(model => model.CreatedAt)" disabled class="form-control">*@
                                        @Html.DisplayFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputDate" class="col-sm-4  col-form-label">Modified date</label>
                                    <div class="col-sm-6 m-1">
                                        @*  <input type="date" value=" @Html.DisplayFor(model => model.ModifiedAt)" disabled class="form-control">*@
                                        @Html.DisplayFor(model => model.ModifiedAt, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <!--<div class="row mb-3">
                                    <label for="inputDate" class="col-sm-4  col-form-label">Deleted date</label>
                                    <div class="col-sm-6 m-1">-->
                                        @*<input type="date" value=" @Html.DisplayFor(model => model.PublishedAt)" disabled class="form-control">*@
                                        <!--@Html.DisplayFor(model => model.DeletedAt, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>-->
                            </div>


                            <div class="text-center">
                                <button type="button" class="btn btn-secondary m-1" onclick="location.href='@Url.Action("Edit", "Categories",new { id = Model.ID })'"><i class="bi bi-pen">Edit</i></button>
                                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Categories")'"><i class="bi arrow-left-circle">Back to list</i></button>
                            </div>
                        </form><!-- End floating Labels Form -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->